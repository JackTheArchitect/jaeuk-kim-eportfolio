<%- include ../partials/header.ejs %>

    <!-- <%= InventoryList %> -->

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <!-- <h1><%= title %></h1> -->
        <br>
        <div>
            <a href="/business_contact/add" class="btn btn-primary align-self-end" role="button">
                <i class="fas fa-plus-circle"></i> 
                Add a new Item
            </a>                
        </div>

        <div class="table-responsive">
            <table id="list-table" class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th id="list-name" class="text-center">Name</th>
                    <th id="list-number" class="text-center">Contact Number</th>
                    <th id="list-email" class="text-center">Email</th>                    
                    <th id="list-actions" class="text-center" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < InventoryList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= InventoryList[count].name %></td>
                        <td class="text-center"><%= InventoryList[count].number %></td>
                        <td class="text-center"><%= InventoryList[count].email %></td>                                                
                        <td class="text-center">
                            <a href="/business_contact/edit/<%= InventoryList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/business_contact/delete/<%= InventoryList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
<%- include ../partials/footer.ejs %>